{
  "compilerOptions": {
    "target": "es2021",
    "module": "ESNext",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "injected/src",
    "injected/scripts",
    "injected/unit-test",
    "injected/integration-test",
    "injected/entry-points",
    "unit-test",
    "types-generator",
    "special-pages",
    "messaging",
    "metrics",
    "playwright.config.js",
    "injected",
    "injected/src/globals.d.ts",
    "typedoc.js",
    ".github/scripts"
  ],
  "exclude": [
    "injected/integration-test/test-pages",
    "injected/playwright-report",
    "injected/integration-test/extension",
    "injected/src/features/scriptlets.js",
    "injected/src/features/Scriptlets/**/*",
    "special-pages/pages/**/public",
    "special-pages/playwright-report",
    "special-pages/test-results",
    "docs"
  ]
}
