{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "DebugLog",
  "description": "Debug log message routed to native for Xcode visibility",
  "required": ["level", "feature", "args"],
  "properties": {
    "level": {
      "type": "string",
      "enum": ["info", "warn", "error", "debug"],
      "description": "Log level"
    },
    "feature": {
      "type": "string",
      "description": "Name of the feature that generated the log"
    },
    "timestamp": {
      "type": "number",
      "description": "Timestamp in milliseconds since epoch"
    },
    "args": {
      "type": "array",
      "description": "Log arguments (strings or error info objects)",
      "items": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "message": { "type": "string" },
              "stack": { "type": "string" }
            },
            "required": ["type", "message"]
          }
        ]
      }
    }
  }
}
