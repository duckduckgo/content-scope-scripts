{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Signpost",
  "description": "Signpost event for performance profiling with os_signpost",
  "required": ["event"],
  "properties": {
    "event": {
      "type": "string",
      "enum": ["Request Allowed", "Tracker Allowed", "Tracker Blocked", "Surrogate Injected", "Generic"],
      "description": "Type of signpost event"
    },
    "url": {
      "type": "string",
      "description": "URL associated with the event"
    },
    "time": {
      "type": "number",
      "description": "Time in milliseconds for the operation"
    },
    "name": {
      "type": "string",
      "description": "Name for generic events"
    },
    "reason": {
      "type": "string",
      "description": "Reason (for Tracker Allowed events)"
    }
  }
}
