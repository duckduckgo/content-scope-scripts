{
    "readme": "Config demonstrating webDetection feature with various detector configurations",
    "version": 1,
    "unprotectedTemporary": [],
    "features": {
        "breakageReporting": {
            "state": "enabled",
            "hash": "test",
            "exceptions": []
        },
        "webDetection": {
            "state": "enabled",
            "hash": "test",
            "exceptions": [],
            "settings": {
                "detectors": {
                    "adwall": {
                        "generic_text": {
                            "match": {
                                "text": {
                                    "pattern": ["ad ?block(er)? detected", "disable your ad ?blocker"]
                                }
                            }
                        },
                        "paywall_element": {
                            "match": {
                                "element": {
                                    "selector": ".paywall-overlay",
                                    "visibility": "visible"
                                }
                            }
                        }
                    },
                    "video": {
                        "unavailable": {
                            "match": {
                                "text": {
                                    "pattern": "video (is )?unavailable",
                                    "selector": ".video-error, .player-error"
                                }
                            }
                        }
                    },
                    "combined": {
                        "text_and_element": {
                            "match": {
                                "text": {
                                    "pattern": "subscribe to continue"
                                },
                                "element": {
                                    "selector": ".subscribe-modal"
                                }
                            }
                        }
                    },
                    "custom": {
                        "trigger_disabled": {
                            "match": {
                                "text": {
                                    "pattern": "trigger disabled test"
                                }
                            },
                            "triggers": {
                                "breakageReport": {
                                    "state": "disabled"
                                }
                            }
                        },
                        "action_disabled": {
                            "match": {
                                "text": {
                                    "pattern": "action disabled test"
                                }
                            },
                            "actions": {
                                "breakageReportData": {
                                    "state": "disabled"
                                }
                            }
                        },
                        "detector_disabled": {
                            "state": "disabled",
                            "match": {
                                "text": {
                                    "pattern": "detector disabled test"
                                }
                            }
                        },
                        "domain_restricted": {
                            "match": {
                                "text": {
                                    "pattern": "domain restricted test"
                                }
                            },
                            "triggers": {
                                "breakageReport": {
                                    "runConditions": {
                                        "domain": "example.com"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
