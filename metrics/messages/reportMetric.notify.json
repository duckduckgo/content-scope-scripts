{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Report Metric Event",
  "type": "object",
  "oneOf": [
    {
      "type": "object",
      "title": "Exception Metric",
      "required": ["metricName", "params"],
      "properties": {
        "metricName": {
          "const": "exception"
        },
        "params": {
          "type": "object",
          "required": ["message"],
          "properties": {
            "message": {
              "type": "string"
            },
            "kind": {
              "type": "string"
            }
          }
        }
      }
    }
  ]
}
