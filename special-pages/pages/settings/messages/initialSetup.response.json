{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["locale", "env", "platform", "settings"],
  "properties": {
    "locale": {
      "type": "string"
    },
    "env": {
      "type": "string",
      "enum": ["development", "production"]
    },
    "platform": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "enum": ["macos", "windows", "android", "ios", "integration"]
        }
      }
    },
    "settings": {"$ref": "./types/settings-data.json"},
    "defaultStyles": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "types/default-styles.json"
        }
      ]
    }
  }
}
