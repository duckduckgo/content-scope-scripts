{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["userValues", "settings", "locale", "env", "platform"],
  "properties": {
    "userValues": { "$ref": "userValues.shared.json"},
    "settings": {
      "type": "object",
      "title": "DuckPlayerPageSettings",
      "required": ["pip"],
      "properties": {
        "pip": {
          "type": "object",
          "required": ["state"],
          "properties": {
            "state": {
              "type": "string",
              "enum": ["enabled", "disabled"]
            }
          }
        },
        "autoplay": {
          "type": "object",
          "required": ["state"],
          "properties": {
            "state": {
              "type": "string",
              "enum": ["enabled", "disabled"]
            }
          }
        },
        "focusMode": {
          "type": "object",
          "required": ["state"],
          "properties": {
            "state": {
              "type": "string",
              "enum": ["enabled", "disabled"]
            }
          }
        }
      }
    },
    "locale": {
      "type": "string"
    },
    "env": {
      "type": "string",
      "enum": ["development", "production"]
    },
    "platform": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "enum": ["macos", "windows", "android", "ios"]
        }
      }
    },
    "localeStrings": {
      "type": "string",
      "description": "Optional locale-specific strings"
    }
  }
}
