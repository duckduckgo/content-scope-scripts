{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["locale", "env", "platform"],
  "properties": {
    "locale": {
      "type": "string"
    },
    "env": {
      "type": "string",
      "enum": ["development", "production"]
    },
    "platform": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "enum": ["macos", "windows", "android", "ios", "integration"]
        }
      }
    },
    "theme": {
      "$ref": "./types/browser-theme.json"
    },
    "themeVariant": {
      "$ref": "./types/theme-variant.json"
    },
    "customizer": {
      "type": "object",
      "properties": {
        "defaultStyles": {
          "deprecated": true,
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "../../new-tab/messages/types/default-styles.json"
            }
          ]
        }
      }
    }
  }
}
