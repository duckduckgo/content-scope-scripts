{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["action"],
  "properties": {
    "action": {
      "oneOf": [
        {
          "const": "delete",
          "title": "Delete Action",
          "description": "Confirms the user deleted this"
        },
        {
          "const": "none",
          "title": "None Action",
          "description": "The user cancelled the action, or did not agree to it"
        }
      ]
    }
  }
}

