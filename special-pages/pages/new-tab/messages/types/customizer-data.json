{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Customizer Data",
  "type": "object",
  "required": [
    "background",
    "theme",
    "userImages",
    "userColor"
  ],
  "properties": {
    "background": {"$ref": "./background.json#/definitions/background-variant"},
    "theme": { "$ref": "./browser-theme.json" },
    "themeVariant": {
      "$ref": "./theme-variant.json"
    },
    "userImages": {
      "type": "array",
      "items": {
        "$ref": "./user-image.json"
      }
    },
    "userColor": {
      "$ref": "./user-color-data.json#/definitions/userColor"
    },
    "defaultStyles": {
      "deprecated": true,
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "./default-styles.json"
        }
      ]
    },
    "showThemeVariantPopover": {
      "title": "Show Theme Variant Popover",
      "description": "Controls a popover that onboards users to the theme variant feature",
      "type": "boolean",
      "default": false
    }
  }
}
