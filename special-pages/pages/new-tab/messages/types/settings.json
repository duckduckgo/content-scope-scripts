{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NewTabPageSettings",
  "type": "object",
  "properties": {
    "customizerDrawer": {
      "type": "object",
      "required": ["state"],
      "properties": {
        "state": {
          "type": "string",
          "enum": ["enabled", "disabled"]
        },
        "autoOpen": {
          "description": "Should the customizer drawer be opened on page load?",
          "type": "boolean"
        }
      }
    }
  }
}
