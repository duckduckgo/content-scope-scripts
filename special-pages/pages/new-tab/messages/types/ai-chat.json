{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AiChat",
  "type": "object",
  "required": ["chatId", "title"],
  "properties": {
    "chatId": {
      "description": "Unique identifier for the chat",
      "type": "string"
    },
    "title": {
      "description": "Display title of the chat",
      "type": "string"
    },
    "model": {
      "description": "AI model used for the chat",
      "type": "string"
    },
    "lastEdit": {
      "description": "ISO timestamp of last edit",
      "type": "string"
    },
    "pinned": {
      "description": "Whether the chat is pinned",
      "type": "boolean"
    }
  }
}
