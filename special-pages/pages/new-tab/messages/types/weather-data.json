{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Weather Data",
  "description": "Weather data for the weather widget",
  "type": "object",
  "required": [
    "temperature",
    "conditionCode",
    "location"
  ],
  "properties": {
    "temperature": {
      "description": "Current temperature in user's preferred unit",
      "type": "number"
    },
    "apparentTemperature": {
      "description": "Feels-like temperature",
      "type": "number"
    },
    "conditionCode": {
      "description": "Weather condition code (e.g., sunny, cloudy, rainy)",
      "type": "string"
    },
    "location": {
      "description": "Location name",
      "type": "string"
    },
    "humidity": {
      "description": "Humidity percentage",
      "type": "number"
    },
    "windSpeed": {
      "description": "Wind speed",
      "type": "number"
    }
  }
}
