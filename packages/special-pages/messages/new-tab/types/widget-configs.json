{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "title": "Widget Configs",
  "description": "Configuration settings for widgets",
  "items": {
    "type": "object",
    "required": [
      "id",
      "visibility"
    ],
    "title": "Widget Config Item",
    "properties": {
      "id": {
        "type": "string",
        "description": "A unique identifier for the widget."
      },
      "visibility": {
        "title": "Widget Visibility",
        "description": "The visibility state of the widget, as configured by the user",
        "type": "string",
        "enum": [
          "visible",
          "hidden"
        ]
      }
    }
  }
}
